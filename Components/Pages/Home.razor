@page "/"

<PageTitle>Home</PageTitle>

<MudGrid>
    <MudItem xs="8">
        <MudPaper Class="d-flex align-center justify-start mud-width-full px-4 py-2 gap-4" Square="true" Elevation="0">
            <MudButton Variant="Variant.Text" Color="Color.Inherit">All</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Inherit">Donuts</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Inherit">Iced Coffee</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Inherit">Hot Coffee</MudButton>
            <MudSpacer/>
            <MudTooltip Text="Add New Category" Placement="Placement.Left" Arrow="true">
                <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Inherit"/>
            </MudTooltip>
        </MudPaper>
        <MudPaper Class="d-flex flex-column gap-4 px-4" Height="100%" Width="100%" Square="true" Elevation="0">
            <MudGrid>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Primary">Doughy's Glazed</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Secondary">Strawberry Sprinkle</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Tertiary">Cookies & Cream</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Success">Caramel</MudButton>
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Info">Chocolate</MudButton>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudItem>
    <MudItem xs="4">
        <MudPaper Height="100%" Width="100%" Square="true" Elevation="0">
            
        </MudPaper>
    </MudItem>
</MudGrid>

