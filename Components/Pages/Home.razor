@page "/"

<PageTitle>Home</PageTitle>

<MudGrid>
    <MudItem xs="8">
        <MudPaper Class="d-flex align-center justify-start mud-width-full px-4 py-2 gap-4" Square="true" Elevation="0">
            <MudButton Variant="Variant.Text" Color="Color.Inherit">All</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Inherit">Donuts</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Inherit">Iced Coffee</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Inherit">Hot Coffee</MudButton>
            <MudSpacer/>
        </MudPaper>
        <MudPaper Class="d-flex flex-column gap-4 px-4" Height="100%" Width="100%" Square="true" Elevation="0">
            <MudGrid>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Primary">Doughy's Glazed</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Secondary">Strawberry Sprinkle</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Tertiary">Cookies & Cream</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Success">Caramel</MudButton>
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Info">Chocolate</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Error">Chocolate Blended</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Warning">Vanilla Milk Shake</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Success">Oreo Blended</MudButton>
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Default">Four Season</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" Class="height-matched-button hw-100" Color="Color.Primary">Lemonade</MudButton>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudItem>
    <MudItem xs="4">
        <MudPaper Class="d-flex align-center justify-end mud-width-full px-4 py-2 gap-4" Square="true" Elevation="0">
            <MudTextField @bind-Value="TextValue" Label="Customer Name" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            <MudSpacer/>
            <MudTooltip Text="Clear Order" Placement="Placement.Left" Arrow="true">
                <MudIconButton Icon="@Icons.Material.Filled.Refresh" Edge="Edge.End"/>
            </MudTooltip>
        </MudPaper>
        <!-- Ordered Items List with Vertical Scroll -->
        <MudPaper Class="pa-4" Square="true" Elevation="0" Style="max-height: 400px; overflow-y: auto;">
            <!-- Doughy's Glazed Item -->
            <MudGrid Class="mb-3" AlignItems="AlignItems.Center">
                <MudItem xs="8">
                    <MudText Typo="Typo.subtitle1">Doughy's Glazed</MudText>
                </MudItem>
                <MudItem xs="4" Class="d-flex justify-end align-center">
                    <MudIconButton Icon="@Icons.Material.Filled.Remove" Size="Size.Small" Variant="Variant.Outlined"/>
                    <MudText Class="mx-3">2</MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.Add" Size="Size.Small" Variant="Variant.Outlined"/>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" Class="ml-2"/>
                </MudItem>
                <MudItem xs="12" Class="text-right mt-1">
                    <MudText Typo="Typo.body2">₱70.00</MudText>
                </MudItem>
            </MudGrid>
    
            <!-- Oreo Blended Item -->
            <MudGrid Class="mb-3" AlignItems="AlignItems.Center">
                <MudItem xs="8">
                    <MudText Typo="Typo.subtitle1">Oreo Blended</MudText>
                </MudItem>
                <MudItem xs="4" Class="d-flex justify-end align-center">
                    <MudIconButton Icon="@Icons.Material.Filled.Remove" Size="Size.Small" Variant="Variant.Outlined"/>
                    <MudText Class="mx-3">2</MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.Add" Size="Size.Small" Variant="Variant.Outlined"/>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" Class="ml-2"/>
                </MudItem>
                <MudItem xs="12" Class="text-right mt-1">
                    <MudText Typo="Typo.body2">₱198.00</MudText>
                </MudItem>
            </MudGrid>
            
            <!-- Cookies & Cream Item -->
            <MudGrid Class="mb-3" AlignItems="AlignItems.Center">
                <MudItem xs="8">
                    <MudText Typo="Typo.subtitle1">Cookies and Cream</MudText>
                </MudItem>
                <MudItem xs="4" Class="d-flex justify-end align-center">
                    <MudIconButton Icon="@Icons.Material.Filled.Remove" Size="Size.Small" Variant="Variant.Outlined"/>
                    <MudText Class="mx-3">1</MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.Add" Size="Size.Small" Variant="Variant.Outlined"/>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" Class="ml-2"/>
                </MudItem>
                <MudItem xs="12" Class="text-right mt-1">
                    <MudText Typo="Typo.body2">₱35.00</MudText>
                </MudItem>
            </MudGrid>
            
            <!-- Vanilla Milkshake Item -->
            <MudGrid Class="mb-3" AlignItems="AlignItems.Center">
                <MudItem xs="8">
                    <MudText Typo="Typo.subtitle1">Vanilla Milkshake</MudText>
                </MudItem>
                <MudItem xs="4" Class="d-flex justify-end align-center">
                    <MudIconButton Icon="@Icons.Material.Filled.Remove" Size="Size.Small" Variant="Variant.Outlined"/>
                    <MudText Class="mx-3">1</MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.Add" Size="Size.Small" Variant="Variant.Outlined"/>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" Class="ml-2"/>
                </MudItem>
                <MudItem xs="12" Class="text-right mt-1">
                    <MudText Typo="Typo.body2">₱99.00</MudText>
                </MudItem>
            </MudGrid>
            
            <!-- Additional items... -->
    
            <MudDivider Class="my-2"/>
        </MudPaper>
    
        <!-- Order Summary -->
        <MudPaper Class="pa-4" Square="true" Elevation="0">
            <!-- Subtotal -->
            <MudGrid Class="mb-2">
                <MudItem xs="6"><MudText Typo="Typo.subtitle2">Subtotal:</MudText></MudItem>
                <MudItem xs="6" Class="text-right"><MudText Typo="Typo.subtitle2">₱402.00</MudText></MudItem>
            </MudGrid>
            
            <!-- Discount -->
            <MudGrid Class="mb-2">
                <MudItem xs="6"><MudText Typo="Typo.subtitle2">Discount:</MudText></MudItem>
                <MudItem xs="6" Class="text-right"><MudText Typo="Typo.subtitle2">₱0.00</MudText></MudItem>
            </MudGrid>
            
            <!-- Tax -->
            @* <MudGrid Class="mb-2"> *@
            @*     <MudItem xs="6"><MudText Typo="Typo.subtitle2">Tax (10%):</MudText></MudItem> *@
            @*     <MudItem xs="6" Class="text-right"><MudText Typo="Typo.subtitle2">₱0.88</MudText></MudItem> *@
            @* </MudGrid> *@
            
            <MudDivider Class="my-3"/>
            
            <!-- Total -->
            <MudGrid Class="mb-4">
                <MudItem xs="6"><MudText Typo="Typo.h6">Total:</MudText></MudItem>
                <MudItem xs="6" Class="text-right"><MudText Typo="Typo.h6">₱402.00</MudText></MudItem>
            </MudGrid>
            
            <!-- Discount Button -->
            <MudButton Variant="Variant.Outlined" Color="Color.Warning" FullWidth="true" Class="mb-3">
                <MudText>Apply Discount</MudText>
            </MudButton>
            
            <!-- Payment Button -->
            <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Class="mb-2">
                <MudText>Process Payment</MudText>
            </MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    public string TextValue { get; set; }

}